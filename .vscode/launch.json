{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build Playbook (Test)",
            "script": "& \"$(Join-Path '${workspaceFolder}' 'src/dependencies/local-build.ps1')\" -AddLiveLog -ReplaceOldPlaybook -Removals WinverRequirement, Verification",
            "cwd": "${workspaceFolder}/src/playbook",
            "args": []
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build Playbook (Test w/o deps)",
            "script": "& \"$(Join-Path '${workspaceFolder}' 'src/dependencies/local-build.ps1')\" -AddLiveLog -ReplaceOldPlaybook -Removals Dependencies, WinverRequirement, Verification",
            "cwd": "${workspaceFolder}/src/playbook",
            "args": []
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build Playbook (Release)",
            "script": "& \"$(Join-Path '${workspaceFolder}' 'src/dependencies/local-build.ps1')\" -FileName 'Atlar Release'",
            "cwd": "${workspaceFolder}/src/playbook",
            "args": []
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build Playbook (Release Candidate)",
            "script": "& \"$(Join-Path '${workspaceFolder}' 'src/dependencies/local-build.ps1')\" -FileName Atlar RC' -NoPassword -ReplaceOldPlaybook -Removals Verification",
            "cwd": "${workspaceFolder}/src/playbook",
            "args": []
        }
    ]
}
