Windows Registry Editor Version 5.00

[HKCR\DesktopBackground\Shell\Idle]
"Icon"="powercpl.dll"
"MUIVerb"="Idle Toggle"
"Position"="Bottom"
"SubCommands"=""

[HKCR\DesktopBackground\Shell\Idle\Shell\Disable Idle]
"MUIVerb"="Disable Idle"
"Icon"="powercpl.dll"

[HKCR\DesktopBackground\Shell\Idle\Shell\Disable Idle\Command]
@="powercfg /setacvalueindex scheme_current sub_processor 5d76a2ca-e8c0-402f-a133-2158492d58ad 1"

[HKCR\DesktopBackground\Shell\Idle\Shell\Enable Idle]
"MUIVerb"="Enable Idle"
"Icon"="powercpl.dll"

[HKCR\DesktopBackground\Shell\Idle\Shell\Enable Idle\Command]
@="powercfg /setacvalueindex scheme_current sub_processor 5d76a2ca-e8c0-402f-a133-2158492d58ad 0"